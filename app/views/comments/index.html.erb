<div class="container">
  <div class= "row">
    <div class="col-lg-8 mx-auto">
      <div class="card card border-primary mt-2">
        <div class="card-header text-center">
          <h4 class="text-primary"><strong>Comments</strong></h4>
        </div>
        <div class="card-body ">

          <% if @comment.where(blog_id: params[:blog_id]).present? %>	
			      <table class="table">
							<thead>
								<tr>
									<th scope="col">User Name</th>
									<th scope="col">Comments</th>
									<th scope="col">Actions</th>
								</tr>
							</thead>
							<tbody>

								<% @comment.each do |comment|%>
									<tr>
										<td><%=comment.user.email %></td>
										 <td><%=comment.comment %></td>
										<%# <% if current_user && current_user.id == comment.user_id %> 
										<%# <% if can? :edit, Comment %> 
									    <td>
										    <div class="d-inline-flex ">
										    	
											    <%= link_to  edit_comment_path(comment),class:"d-inline-flex mt-1 px-2" do %>
											      <i class="fa-solid fa-pen-to-square "></i>
											    <% end %> 

											    <%= button_to comment, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "border-0 bg-transparent" do %>
											        <i class="fa-regular fa-trash-can text-danger "></i>
											    <% end %>
					              </div>
				              </td>
										<%# <% end %> 
									</tr>
								<% end %>
						  </tbody>
					  </table>
					<% else %>
					  <p class=" lead text-center">
					  	No Comments
					  </p>
					<% end %>
					<%= link_to "Back", blogs_path, class:"btn btn-outline-primary align:'right'" %>
        </div>
      </div>
    </div>
  </div>
</div>
