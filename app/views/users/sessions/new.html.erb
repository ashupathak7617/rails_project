<div class="container">
  <div class="col-lg-6 mx-auto">
    <div class="card mt-3">
      <div class="card-header">
        <h2 class="text-center">Sign in</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class:"form-label mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class:"form-label mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",class: "form-control form-control-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me,class:"form-label mt-3 mb-2" %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Log in", class:"btn btn-primary mt-3 mb-2" %>
        </div>
        <% end %>

        <%= render "users/shared/links" %>

      </div>
    </div>
  </div>
</div>




