<%= form_with model: @blog do |form| %>
  <% flash.each do |_type, msg| %>
    <p class=" text-danger">
      <%= msg.html_safe %>
    </p> 
  <% end %>

  <div class="form-group" >
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control form-control-lg" %>
    <% if @blog.errors[:title].any? %>
      <ul>
        <% @title.errors[:title].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control form-control-lg" %>
  </div>
  
  <%= form.hidden_field :user_id, :value =>current_user.id %>
  <div class="mt-2">
    <%= form.submit class:"btn btn-primary" %>
    <%= link_to "Home Page" ,root_path,class:"btn btn-outline-info" %>
  </div>
<% end %>