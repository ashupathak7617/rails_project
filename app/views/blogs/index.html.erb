<div class="container">
	<div class="card card border-primary mt-3">
		<div class="card-header">
			<h1 class="text-center">All Blogs</h1>
		</div>
		<div class="card-body">
			<table class="table">
				<thead>
					<tr>
						<th scope="col"> Name </th>
						<th scope="col"> Title </th>
						<th scope="col"> Content </th>
						<th scope="col"> Action </th>
					</tr>
				</thead>
				<tbody>
					<% @blogs.each do |blog|%>
					<tr>
						<td><%= blog.user.email %>
							<td><%= blog.title %></td>
							<td><%= blog.content %></td>
							<td>
								<%= link_to  blog_path(blog), class:"" do %>
								<h4>
								  <i class="fa-solid fa-eye mt-3"></i>
								</h4>
								<% end %>
							</td>
						</tr>
						<% end %>
				</tbody>
			</table>
					<%= will_paginate @blogs, class:" text-center"%>
				<div class="row">
				<div class="mt-2">
					<%= link_to 'Add Blog', new_blog_path, class: 'btn btn-outline-primary' %>
					<%= link_to 'Cancle', root_path, class: 'btn btn-outline-primary' %> 
				</div>
			</div>
		</div>
	</div>
</div>
